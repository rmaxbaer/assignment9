@{
    ViewData["Title"] = "Current Films";
    ViewBag.Title = "Current Films";
}

@model IEnumerable<FilmCollection.Models.Film> 

<div class="table-responsive table-bordered">
    <table style="width:100%" class="table table-hover">
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (FilmCollection.Models.Film x in Model)
            {
                if(@x.Title != "Independence Day")
                {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                    <td>
                        @*<button type="button" class="btn btn-outline-info">Edit</button>*@
                        <!--make a link to edit and pass along the id of the film-->
                        @Html.ActionLink("Edit", "Edits", new { id = x.FilmId })
                    </td>
                    <td>
                        <!--make a link to delete and pass along the id of the film-->
                        @Html.ActionLink("Delete", "Deletes", new { id = x.FilmId })
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>


</div>
